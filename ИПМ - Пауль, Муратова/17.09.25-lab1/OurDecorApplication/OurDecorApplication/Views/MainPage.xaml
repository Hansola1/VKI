<Page x:Class="OurDecorApplication.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OurDecorApplication.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главное окно">

    <Grid Height="450" Width="800" Background="White">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Panel.ZIndex="1"></Frame>
        <Image Margin="356,42,356,327" Source="/resources/DecorLabel.png" Stretch="UniformToFill"/>
        
        <!--Заголовок-->
        <TextBlock HorizontalAlignment="Center" Margin="0,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" FontSize="40"
       Height="58" FontFamily="Gabriola"><Run Language="ru-ru" Text="Главное окно"/></TextBlock>

        <!--Кнопки-->
        <Button Content="Список продуктов" HorizontalAlignment="Center" VerticalAlignment="Center" Width="244" Click="ToProducts_click" 
            Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="39" Foreground="White"/>
        <Button Content="Список материалов" HorizontalAlignment="Center" VerticalAlignment="Top" Width="244" Click="ToMaterials_click" 
            Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="38" Foreground="White" Margin="0,271,0,0"/>
        <Button Content="Выход" HorizontalAlignment="Center" VerticalAlignment="Top" Width="244" Click="Out_click" 
            Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="38" Foreground="White" Margin="0,333,0,0"/>
    </Grid>
</Page>
