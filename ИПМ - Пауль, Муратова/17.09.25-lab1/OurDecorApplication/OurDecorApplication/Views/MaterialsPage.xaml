<Page x:Class="OurDecorApplication.Views.MaterialsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OurDecorApplication.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Список материалов">

    <Grid Height="450" Width="800" Background="White">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Panel.ZIndex="1"></Frame>

        <!--Заголовок-->
        <TextBlock HorizontalAlignment="Left" Margin="20,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" FontSize="30"
                Height="43" FontFamily="Gabriola"><Run Language="ru-ru" Text="Список материалов"/></TextBlock>

        <!--Кнопки-->
        <Button Content="Назад" HorizontalAlignment="Left" Margin="20,408,0,0" VerticalAlignment="Top" Width="131" Click="Cancel_click" 
             Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="32" Foreground="White"/>
        <Button Content="Список продуктов" HorizontalAlignment="Left" Margin="163,408,0,0" VerticalAlignment="Top" Width="181" Click="ToProducts_click" 
             Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="32" Foreground="White"/>
        
        <!-- Таблица материалов -->
        <ListView x:Name="MaterialsListView" Margin="20,70,20,60">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Black" Padding="10" Margin="0,0,0,5">
                        <StackPanel>
                            <TextBlock Text="{Binding NameMaterial}" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TypeMaterial}" FontSize="12" Foreground="Gray"/>
                            <TextBlock Text="{Binding UnitMeasurement}" FontSize="12"/>
                            <TextBlock Text="{Binding CostMaterialOne, StringFormat='Стоимость: {0:C}'}" FontSize="12"/>
                            <TextBlock Text="{Binding CountMaterial, StringFormat='На складе: {0:F2}'}" FontSize="12"/>
                            <TextBlock Text="{Binding MinCount, StringFormat='Мин. остаток: {0:F2}'}" FontSize="12"/>
                            <TextBlock Text="{Binding CountInPackage, StringFormat='В упаковке: {0:F2}'}" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
