<UserControl x:Class="ShopShoesApplication.Views.UserControls.OrderCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="720" Width="720" Height="150"
             FontFamily="Times New Roman" Background="White">

    <Border BorderThickness="1" BorderBrush="Black" Padding="10" Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="530"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <Border BorderThickness="1" BorderBrush="Black" Padding="10">
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="{Binding Article, StringFormat='Артикул {0}'}" 
                    FontSize="13" FontWeight="Bold" Foreground="DarkGreen" Margin="0,5,0,0"/>

                    <TextBlock Text="{Binding Status, StringFormat='Статус заказа: {0}'}" 
                        FontSize="13" FontWeight="SemiBold" Foreground="DarkGreen" Margin="0,5,0,0"/>

                    <TextBlock Text="{Binding PickupAddress, StringFormat='Адрес пункта выдачи: {0}'}" 
                  FontSize="13" Foreground="DarkGreen" Margin="0,5,0,0"/>

                    <TextBlock Text="{Binding CreatedDate, StringFormat='Дата заказа: {0}'}" 
                    FontSize="13" FontWeight="SemiBold" Foreground="DarkGreen" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border BorderThickness="1" BorderBrush="Black" Padding="10" Grid.Column="1" Margin="5,0,0,0">
                <TextBlock Text="{Binding DeliveredDate, StringFormat='Дата доставки: {0}'}" 
                        FontSize="13" FontWeight="SemiBold" Foreground="DarkGreen" Margin="0,5,0,0"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
