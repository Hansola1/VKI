<Page x:Class="ShopShoesApplication.Views.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopShoesApplication.Views.UserControls"
      xmlns:conv="clr-namespace:ShopShoesApplication.Views.Converters"
      mc:Ignorable="d" 
       d:DesignHeight="450" d:DesignWidth="800"
      Title="Окно Списка продуктов">

    <Grid Height="450" Width="800" Background="White">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Panel.ZIndex="1"></Frame>

        <!--Заголовок-->
        <TextBlock HorizontalAlignment="Left" Margin="20,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="253" FontSize="30"
                Height="43" FontFamily="Times New Roman"><Run Language="ru-ru" Text="Список продуктов"/></TextBlock>

        <!--Кнопки-->
        <Button Content="Назад" HorizontalAlignment="Left" Margin="20,408,0,0" VerticalAlignment="Top" Width="131" Click="Cancel_click" 
             Background="#00FA9A" BorderBrush="#00FA9A" FontFamily="Times New Roman" FontSize="20" Height="32" Foreground="Black"/>
        <Button x:Name="OrderButton" Content="Список заказов" HorizontalAlignment="Left" Margin="163,408,0,0" VerticalAlignment="Top" Width="181" Click="ToOrders_click" 
             Background="#00FA9A" BorderBrush="#00FA9A" FontFamily="Times New Roman" FontSize="20" Height="32" Foreground="Black"/>
        <Button x:Name="AddButton" Content="Добавить продукт" HorizontalAlignment="Left" Margin="349,408,0,0" VerticalAlignment="Top" Width="192" Click="AddProduct_click" 
             Background="#00FA9A" BorderBrush="#00FA9A" FontFamily="Times New Roman" FontSize="20" Height="32" Foreground="Black"/>
        <Button x:Name="DeleteButton" Content="Удалить продукт" HorizontalAlignment="Left" Margin="546,408,0,0" VerticalAlignment="Top" Width="165" Click="DeleteProduct_click" 
             Background="#00FA9A" BorderBrush="#00FA9A" FontFamily="Times New Roman" FontSize="20" Height="32" Foreground="Black"/>

        <!-- Таблица продуктов -->
        <ListView x:Name="ProductListView" Margin="20,98,20,61" MouseDoubleClick="ProductListView_MouseDoubleClick"
          FontFamily="Times New Roman" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:ProductCardControl />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label x:Name="NameAccount" HorizontalAlignment="Left" Margin="483,13,0,0" VerticalAlignment="Top" Width="297" FontSize="16" Height="16"/>

        <!-- Поиск -->
        <TextBox x:Name="SearchTextBox" Margin="70,61,439,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" TextChanged="SearchTextBox_TextChanged"/>
        <Label x:Name="SearchLabel" Content="Поиск" HorizontalAlignment="Left" Margin="20,56,0,0" VerticalAlignment="Top" Height="28" Width="88"/>

        <!-- Фильтр по поставщику -->
        <TextBlock x:Name="FilterLabel" Text="Фильтр" HorizontalAlignment="Center" Margin="0,62,0,0" VerticalAlignment="Top" Height="21" Width="54"/>
        <ComboBox x:Name="ProviderFilterComboBox" Margin="433,61,213,0" VerticalAlignment="Top" Height="23" SelectionChanged="ProviderFilterComboBox_SelectionChanged"/>

        <!-- Сортировка по количеству -->
        <TextBlock x:Name="SortLabel" Text="Сортировка по кол-во" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="598,52,0,0" VerticalAlignment="Top" Height="40" Width="72"/>
        <Button x:Name="MaxButton" Content="Убывание" Tag="Asc" Click="SortByCount_Click" Margin="675,68,20,364"/>
        <Button x:Name="MinButton" Content="Возрастание" Tag="Desc" Click="SortByCount_Click" Margin="675,45,20,387"/>
    </Grid>
</Page>
