<Page x:Class="ElectricalProfiling.Views.Old.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectricalProfiling.Views.Old"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="LogInPage" Background="White">

    <Grid Height="600" Width="1080" MaxHeight="600" MinHeight="600" MinWidth="1080" MaxWidth="1080">
        <TextBlock Text="Вход в аккаунт" FontSize="70" Margin="298,30,304,482" FontFamily="Times New Roman" FontWeight="Bold" Foreground="Black"/>
        <TextBlock Text="Электроразведочное профилирование (СЭП)" FontSize="25" Margin="298,111,300,456" FontFamily="Times New Roman" Foreground="#FF3D3D3D"/>

        <TextBlock Text="Логин:" FontSize="38" Margin="300,196,663,364" FontFamily="Times New Roman" Foreground="#FF3D3D3D"/>
        <TextBox x:Name="Login_TextBox" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="480" Height="60"  Foreground="Black" Background="#FFE8F0FF" Margin="0,255,0,0"/>

        <TextBlock Text="Пароль:" FontSize="38" Margin="298,320,644,240" FontFamily="Times New Roman" Foreground="#FF3D3D3D"/>
        <TextBox x:Name="Password_TextBox" Style="{StaticResource TextBoxStyle}" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="480" Height="60"  Foreground="Black" Background="#FFE8F0FF" Margin="0,369,0,0"/>

        <Button Click="LogIn_Click" Background="#FFCBD9F3" Style="{StaticResource ButtonStyle}"
        Content="Войти" HorizontalAlignment="Left" Width="476" Height="NaN" BorderBrush="White"
        Foreground="Black" FontFamily="Times New Roman" FontWeight="Bold" FontSize="40" Margin="298,470,0,60"/>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
