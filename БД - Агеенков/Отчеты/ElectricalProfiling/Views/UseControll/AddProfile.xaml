<UserControl x:Class="ElectricalProfiling.Views.UseControll.AddProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectricalProfiling.Views.UseControll"
             mc:Ignorable="d" 
            d:DesignHeight="400" d:DesignWidth="600">

    <Grid Background="White" Height="400" Width="600">
        <TextBlock FontFamily="Times New Roman" Text="Добавить профиль" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,37,0,326" Width="259"/>

        <TextBlock FontFamily="Times New Roman" FontSize="20" Margin="106,113,318,261" RenderTransformOrigin="0.482,0.228"><Run Text="Название "/><Run Language="ru-ru" Text="профиля"/><Run Text=":"/></TextBlock>
        <TextBox FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}" Background="#FFE1E8ED" x:Name="AreaName_TextBox" FontSize="15" Margin="106,144,106,0" VerticalAlignment="Top" Height="36" BorderBrush="#FFC2CFFA" Foreground="#FF070B0F"/>

        <Button Content="Сохранить" Click="SaveButton_Click" FontSize="16" Margin="130,308,0,62" HorizontalAlignment="Left" Width="158" Style="{StaticResource ButtonStyle}" Background="#FFC7D2DA" Foreground="#FF020202" FontFamily="Times New Roman"/>
        <Button Content="Закрыть" Click="CloseButton_Click" FontSize="16" Margin="300,308,0,62" HorizontalAlignment="Left" Width="140" Style="{StaticResource ButtonStyle}" Background="#FFC7D2DA" Foreground="#FF020202" FontFamily="Times New Roman"/>

        <TextBox FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}" Background="#FFE1E8ED" x:Name="ProjectName_TextBox" FontSize="15" Margin="105,226,106,0" VerticalAlignment="Top" Foreground="#FF070B0F"/>
        <TextBlock FontFamily="Times New Roman" FontSize="20" Margin="106,200,260,174" RenderTransformOrigin="0.482,0.228"><Run Language="ru-ru" Text="Название п"/><Run Text="лощади"/><Run Text=":"/></TextBlock>

    </Grid>
</UserControl>
