<UserControl x:Class="ElectricalProfiling.Views.UseControll.AddArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectricalProfiling.Views.UseControll"
             mc:Ignorable="d" 
            d:DesignHeight="400" d:DesignWidth="600">

    <Grid Background="White" Height="400" Width="600">
        <TextBlock FontFamily="Times New Roman" Text="Добавить площадь" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,353" Width="260"/>

        <TextBlock FontFamily="Times New Roman" Text="Название площади:" FontSize="20" Margin="124,65,300,309" RenderTransformOrigin="0.482,0.228"/>
        <TextBox FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}" Background="#FFE1E8ED" x:Name="AreaName_TextBox" FontSize="15" Margin="118,96,94,0" VerticalAlignment="Top" Height="36" BorderBrush="#FFC2CFFA" Foreground="#FF070B0F"/>

        <Button Content="Сохранить" Click="SaveButton_Click" FontSize="16" Margin="142,352,0,18" HorizontalAlignment="Left" Width="158" Style="{StaticResource ButtonStyle}" Background="#FFC7D2DA" Foreground="#FF020202" FontFamily="Times New Roman"/>
        <Button Content="Закрыть" Click="CloseButton_Click" FontSize="16" Margin="312,352,0,18" HorizontalAlignment="Left" Width="140" Style="{StaticResource ButtonStyle}" Background="#FFC7D2DA" Foreground="#FF020202" FontFamily="Times New Roman"/>

        <TextBox FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}" Background="#FFE1E8ED" x:Name="ProjectName_TextBox" FontSize="15" Margin="118,165,94,0" Foreground="#FF070B0F" VerticalAlignment="Top"/>
        <TextBlock FontFamily="Times New Roman" FontSize="20" Margin="124,139,242,235" RenderTransformOrigin="0.482,0.228" Text="Проект:"/>
        <TextBox FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}" Background="#FFE1E8ED" x:Name="X" FontSize="15" Margin="118,235,94,0" VerticalAlignment="Top" Foreground="#FF070B0F"/>
        <TextBlock FontFamily="Times New Roman" FontSize="20" Margin="124,209,242,165" RenderTransformOrigin="0.482,0.228" Text="X:"/>
        <TextBox FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}" Background="#FFE1E8ED" x:Name="Y" FontSize="15" Margin="118,298,94,0" VerticalAlignment="Top" Foreground="#FF070B0F"/>
        <TextBlock FontFamily="Times New Roman" FontSize="20" Margin="124,272,242,102" RenderTransformOrigin="0.482,0.228" Text="Y:"/>

    </Grid>
</UserControl>
