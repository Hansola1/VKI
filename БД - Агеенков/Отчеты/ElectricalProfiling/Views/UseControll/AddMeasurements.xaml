<UserControl x:Class="ElectricalProfiling.Views.UseControll.AddMeasurements"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectricalProfiling.Views.UseControll"
             mc:Ignorable="d" 
            d:DesignHeight="400" d:DesignWidth="600">

    <Grid Background="White" Height="400" Width="600">
        <TextBlock FontFamily="Times New Roman" Text="Добавить измерение" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,353" Width="283"/>

        <TextBlock FontFamily="Times New Roman" Text="Название станции:" FontSize="16" Margin="124,57,300,317" RenderTransformOrigin="0.482,0.228"/>
        <TextBox FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}" Background="#FFE1E8ED" x:Name="StantionName_TextBox" FontSize="14" Margin="118,78,94,0" VerticalAlignment="Top" Height="31" BorderBrush="#FFC2CFFA" Foreground="#FF070B0F"/>

        <Button Content="Сохранить" Click="SaveButton_Click" FontSize="16" Margin="142,351,0,19" HorizontalAlignment="Left" Width="158" Style="{StaticResource ButtonStyle}" Background="#FFC7D2DA" Foreground="#FF020202" FontFamily="Times New Roman"/>
        <Button Content="Закрыть" Click="CloseButton_Click" FontSize="16" Margin="312,351,0,19" HorizontalAlignment="Left" Width="140" Style="{StaticResource ButtonStyle}" Background="#FFC7D2DA" Foreground="#FF020202" FontFamily="Times New Roman"/>

        <TextBox FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}" Background="#FFE1E8ED" x:Name="Date_TextBox" FontSize="14" Margin="118,138,94,0" Foreground="#FF070B0F" VerticalAlignment="Top" Height="31"/>
        <TextBlock FontFamily="Times New Roman" FontSize="16" Margin="124,114,242,260" RenderTransformOrigin="0.482,0.228"><Run Language="ru-ru" Text="Дата"/><Run Text=":"/></TextBlock>
        <TextBox FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}" Background="#FFE1E8ED" x:Name="MeasurementType_TextBox" FontSize="14" Margin="118,193,94,0" VerticalAlignment="Top" Foreground="#FF070B0F" Height="31"/>
        <TextBlock FontFamily="Times New Roman" FontSize="16" Margin="124,174,242,200" RenderTransformOrigin="0.482,0.228"><Run Language="ru-ru" Text="Тип измерения"/><Run Text=":"/></TextBlock>
        <TextBox FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}" Background="#FFE1E8ED" x:Name="Value_TextBox" FontSize="14" Margin="118,249,94,0" VerticalAlignment="Top" Foreground="#FF070B0F" Height="31"/>
        <TextBlock FontFamily="Times New Roman" FontSize="16" Margin="124,229,242,145" RenderTransformOrigin="0.482,0.228"><Run Language="ru-ru" Text="Значение"/><Run Text=":"/></TextBlock>
        <TextBox FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}" Background="#FFE1E8ED" x:Name="ValueUnits_TextBox" FontSize="14" Margin="118,305,94,0" VerticalAlignment="Top" Foreground="#FF070B0F" Height="31"/>
        <TextBlock FontFamily="Times New Roman" FontSize="16" Margin="124,285,242,89" RenderTransformOrigin="0.482,0.228"><Run Language="ru-ru" Text="Единица измерения"/><Run Text=":"/></TextBlock>

    </Grid>
</UserControl>
