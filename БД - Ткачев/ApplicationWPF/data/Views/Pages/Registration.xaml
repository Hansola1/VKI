<Page x:Class="data.Views.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:data.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080" Background="White"
      Title="Registration">

    <Grid>
        <TextBlock Text="Регистрация" FontSize="50" FontWeight="Bold" HorizontalAlignment="Center"
             VerticalAlignment="Top" Foreground="Black" Width="310" Margin="0,36,0,0"/>

        <TextBlock Text="Имя" FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Left"
             VerticalAlignment="Top" Foreground="Black" Width="120" Margin="298,200,0,0"/>

        <TextBox x:Name="name_TextBox"  FontSize="25" Style="{StaticResource searchTextbox}" HorizontalAlignment="Left" TextWrapping="Wrap" 
           Text="" Width="300" Height="52"  Foreground="Black" 
            Background="#FFF8EDFF" Margin="450,206,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="Логин" FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Left"
             VerticalAlignment="Top" Foreground="Black" Width="120" Margin="298,258,0,0"/>

        <TextBox x:Name="login_TextBox"  FontSize="25" Style="{StaticResource searchTextbox}" HorizontalAlignment="Left" TextWrapping="Wrap" 
           Text="" Width="300" Height="52"  Foreground="Black" 
            Background="#FFF8EDFF" Margin="450,264,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="Пароль" FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Left"
        VerticalAlignment="Top" Foreground="Black" Width="120" Margin="298,318,0,0"/>

        <TextBox x:Name="password_TextBox"  FontSize="25" Style="{StaticResource searchTextbox}" HorizontalAlignment="Left" TextWrapping="Wrap" 
        Text="" Width="300" Height="52"  Foreground="Black" 
        Background="#FFF8EDFF" Margin="450,324,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="Почта" FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Left"
        VerticalAlignment="Top" Foreground="Black" Width="120" Margin="298,375,0,0"/>

        <TextBox x:Name="email_TextBox"  FontSize="25" Style="{StaticResource searchTextbox}" HorizontalAlignment="Left" TextWrapping="Wrap" 
         Text="" Width="300" Height="52"  Foreground="Black" 
        Background="#FFF8EDFF" Margin="450,381,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="Возраст" FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Left"
        VerticalAlignment="Top" Foreground="Black" Width="120" Margin="298,432,0,0"/>

        <TextBox x:Name="age_TextBox"  FontSize="25" Style="{StaticResource searchTextbox}" HorizontalAlignment="Left" TextWrapping="Wrap" 
        Text="" Width="300" Height="52"  Foreground="Black" 
        Background="#FFF8EDFF" Margin="450,438,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="Пол" FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Left"
        VerticalAlignment="Top" Foreground="Black" Width="78" Margin="298,489,0,0"/>

        <TextBox x:Name="sex_TextBox"  FontSize="25" Style="{StaticResource searchTextbox}" HorizontalAlignment="Left" TextWrapping="Wrap" 
        Text="" Width="300" Height="52"  Foreground="Black" 
        Background="#FFF8EDFF" Margin="450,495,0,0" VerticalAlignment="Top"/>

        <Button Click="reg_Click" Background="#FFF2CFFF" Style="{StaticResource topButton}"
         Content="Зарегистрироваться"  VerticalAlignment="Top" Width="420" Height="62" BorderBrush="White"
         Foreground="Black" FontFamily="Malgun Gothic" FontWeight="Bold" FontSize="25" HorizontalAlignment="Center" Margin="0,594,0,0"/>

        <Button Click="login_Click" Background="#FFE2E2E2" Style="{StaticResource topButton}"
            Content="Войти"  VerticalAlignment="Top" Width="210" Height="62" BorderBrush="White"
            Foreground="Black" FontFamily="Malgun Gothic" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left" Margin="522,124,0,0"/>
        <TextBlock FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Left"
            VerticalAlignment="Top" Foreground="Black" Width="219" Margin="298,133,0,0"><Run Language="ru-ru" Text="Есть аккаунт?"/></TextBlock>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
