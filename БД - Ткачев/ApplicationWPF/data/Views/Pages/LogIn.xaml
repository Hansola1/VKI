<Page x:Class="data.Views.Pages.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:data.Views.Pages"
        mc:Ignorable="d"
        d:DesignHeight="720" d:DesignWidth="1080" Background="White"
        Title="LogIn" >

    <Grid>
        <TextBox x:Name="login_TextBox"  FontSize="25" Style="{StaticResource searchTextbox}" HorizontalAlignment="Left" TextWrapping="Wrap" 
        Text="" Width="300" Height="52"  Foreground="Black" 
        Background="#FFF8EDFF" Margin="481,285,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="Логин" FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Left"
        VerticalAlignment="Top" Foreground="Black" Width="124" Margin="352,285,0,0"/>

        <TextBox x:Name="password_TextBox"  FontSize="25" Style="{StaticResource searchTextbox}" HorizontalAlignment="Left" TextWrapping="Wrap" 
        Text="" Width="300" Height="52"  Foreground="Black" 
        Background="#FFF8EDFF" Margin="481,342,0,0" VerticalAlignment="Top"/>

        <Button Click="login_Click" Background="#FFF2CFFF" Style="{StaticResource topButton}"
         Content="Войти"  VerticalAlignment="Top" Width="420" Height="62" BorderBrush="White"
         Foreground="Black" FontFamily="Malgun Gothic" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left" Margin="361,441,0,0"/>

        <Button Click="reg_Click" Background="#FFE2E2E2" Style="{StaticResource topButton}"
         Content="Регистрация"  VerticalAlignment="Top" Width="210" Height="62" BorderBrush="White"
         Foreground="Black" FontFamily="Malgun Gothic" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left" Margin="571,190,0,0"/>

        <TextBlock FontSize="50" FontWeight="SemiBold" HorizontalAlignment="Center"
            VerticalAlignment="Top" Foreground="Black" Width="124" Margin="0,91,0,0"><Run Language="ru-ru" Text="Вход"/></TextBlock>
        
        <TextBlock FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Left"
            VerticalAlignment="Top" Foreground="Black" Width="219" Margin="347,199,0,0"><Run Language="ru-ru" Text="Нет аккаунта?"/></TextBlock>

        <TextBlock Text="Пароль" FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Left"
            VerticalAlignment="Top" Foreground="Black" Width="124" Margin="352,350,0,0"/>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
