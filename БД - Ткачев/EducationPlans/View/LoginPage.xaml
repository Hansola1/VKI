<Page x:Class="EducationPlans.View.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EducationPlans.View"
      mc:Ignorable="d" 
      Title="LoginPage" Background="White">

    <Grid x:Name="MainGrid">
        <TextBlock Text="Вход в аккаунт" FontSize="50" Margin="368,61,368,476"
        FontFamily="Times New Roman" FontWeight="Bold" Foreground="Black"/>

        <Button Click="loginClick" Background="#FFE7EFF4"  Style="{StaticResource ButtonStyle}"
        Content="Войти" HorizontalAlignment="Center" Width="398" Height="NaN" BorderBrush="White"
        Foreground="Black" FontFamily="Times New Roman" FontSize="26" Margin="0,489,0,57" FontWeight="Bold"/>

        <TextBox x:Name="nameTextBox" GotFocus="TextBoxGotFocus" 
         Text="Имя" FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}"
         Background="#FFF0F6FA" FontSize="20" Margin="341,166,341,0" VerticalAlignment="Top"
         Foreground="#FF15325B" Height="41"/>

        <TextBox x:Name="loginTextBox" GotFocus="TextBoxGotFocus" 
            Text="Логин" FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}"
            Background="#FFF0F6FA" FontSize="20" Margin="341,230,341,0" VerticalAlignment="Top"
            Foreground="#FF15325B" Height="41"/>

        <TextBox x:Name="passwordTextBox" GotFocus="TextBoxGotFocus" 
            Text="Пароль" FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}"
            Background="#FFF0F6FA" FontSize="20" Margin="341,289,341,0" VerticalAlignment="Top"
            Foreground="#FF15325B" Height="41"/>

        <TextBox x:Name="specializationTextBox" GotFocus="TextBoxGotFocus" 
            Text="Специализация" FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}"
            Background="#FFF0F6FA" FontSize="20" Margin="341,347,341,0" VerticalAlignment="Top"
            Foreground="#FF15325B" Height="41"/>

        <TextBox x:Name="groupTextBox" GotFocus="TextBoxGotFocus" 
         Text="Группа" FontFamily="Times New Roman" Style="{StaticResource TextBoxStyle}"
         Background="#FFF0F6FA" FontSize="20" Margin="341,403,341,0" VerticalAlignment="Top"
         Foreground="#FF15325B" Height="45"/>

        <TextBlock HorizontalAlignment="Left" Margin="758,351,0,0" TextWrapping="Wrap" VerticalAlignment="Top"
                   Width="274" FontFamily="Times New Roman" FontSize="14" Foreground="#FFACC6D7" 
                   Text="*Eсли вы преподаватель, то укажите специализацию, но не указывайте группу" FontWeight="UltraLight" TextTrimming="WordEllipsis"/>

        <TextBlock HorizontalAlignment="Left" Margin="758,409,0,0" TextWrapping="Wrap" VerticalAlignment="Top"
                   Width="250" FontFamily="Times New Roman" FontSize="14" Foreground="#FFACC6D7" 
                   Text="*Eсли вы студент, то укажите группу, но не указывайте специализацию" FontWeight="UltraLight" TextTrimming="WordEllipsis"/>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="10"/>
    </Grid>
</Page>
