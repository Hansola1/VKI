<Page x:Class="CarsharingApp.Views.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarsharingApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="RegistrationPage">

    <Grid Width="1080" Height="600" Background="White">
        <TextBlock Text="Регистрация аккаунта"  FontSize="50" HorizontalAlignment="Center" Margin="0,0,0,537" FontWeight="Bold" Width="540"/>

        <Button Click="Registration_Click" Background="#FFF6DCFF" Content="Зарегистрироваться" HorizontalAlignment="Left" FontSize="24"
        Width="364" Height="50" BorderBrush="White" Foreground="Black" FontFamily="Malgun Gothic"  FontWeight="Bold"
        Margin="403,491,0,59"/>

        <TextBlock Text="Логин" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="283,143,0,431" TextAlignment="Center" Foreground="Black" Width="122"/>
        <TextBox x:Name="Login_TextBox"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="362" Height="36"  Foreground="Black" Margin="405,140,0,0" Background="#FFF8EDFF"/>

        <TextBlock Text="Пароль" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="283,189,0,385" TextAlignment="Center" Foreground="Black" Width="110"/>
        <TextBox x:Name="Password_TextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="364" Height="36"  Foreground="Black" Margin="405,186,0,0" Background="#FFF8EDFF"/>
        <TextBlock  FontSize="20" HorizontalAlignment="Left" Margin="367,68,0,504" FontWeight="Bold" Width="146" RenderTransformOrigin="0.612,0.121"><Run Language="ru-ru" Text="Есть аккаунт?"/></TextBlock>
        <Button Click="Login_Click" Background="#FFE2E2E2" Content="Войти" HorizontalAlignment="Left" FontSize="20"
            Width="158" BorderBrush="White" Foreground="Black" FontFamily="Malgun Gothic"  FontWeight="Bold"
            Margin="518,68,0,495"/>

        <TextBlock Text="Фамилия" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="285,242,0,332" TextAlignment="Center" Foreground="Black" Width="108"/>
        <TextBox x:Name="LastName_TextBox"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="362" Height="36"  Foreground="Black" Margin="405,239,0,0" Background="#FFF8EDFF"/>

        <TextBlock Text="Имя" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="283,292,0,282" TextAlignment="Center" Foreground="Black" Width="110"/>
        <TextBox x:Name="FirstName_TextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="364" Height="36"  Foreground="Black" Margin="405,284,0,0" Background="#FFF8EDFF"/>
        <TextBlock FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="283,339,0,235" TextAlignment="Center" Foreground="Black" Width="110"><Run Language="ru-ru" Text="Отчество"/></TextBlock>
        <TextBox x:Name="Surname_TextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="364" Height="36"  Foreground="Black" Margin="405,336,0,0" Background="#FFF8EDFF"/>
        <TextBlock FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="285,392,0,182" TextAlignment="Center" Foreground="Black" Width="108"><Run Language="ru-ru" Text="Телефон"/></TextBlock>
        <TextBox x:Name="Phone_TextBox"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="362" Height="36"  Foreground="Black" Margin="405,389,0,0" Background="#FFF8EDFF"/>
        <TextBlock FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="283,440,0,135" TextAlignment="Center" Foreground="Black" Width="110"><Run Language="ru-ru" Text="Почта"/></TextBlock>
        <TextBox x:Name="Email_TextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="364" Height="36"  Foreground="Black" Margin="405,440,0,0" Background="#FFF8EDFF"/>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>