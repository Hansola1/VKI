<Page x:Class="CarsharingApp.Views.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarsharingApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="BookingPage">

    <Grid Width="1080" Height="600" Background="White">
        <TextBlock Text="Бронирование"  FontSize="50" HorizontalAlignment="Left" Margin="349,61,0,476" FontWeight="Bold" Width="370"/>

        <Button Click="Booking_Click" Background="#FFF6DCFF" Content="Забронировать" HorizontalAlignment="Left" FontSize="24"
        Width="364" Height="50" BorderBrush="White" Foreground="Black" FontFamily="Malgun Gothic"  FontWeight="Bold"
        Margin="465,488,0,62"/>
        
        <Button Click="Cancel_Click" Background="#FFF6DCFF" Content="Назад" HorizontalAlignment="Left" FontSize="24"
            Width="319" Height="50" BorderBrush="White" Foreground="Black" FontFamily="Malgun Gothic"  FontWeight="Bold"
            Margin="129,488,0,62"/>
        
        <TextBlock FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="226,194,0,375" TextAlignment="Center" Foreground="Black" Width="178"><Run Text="ID "/><Run Language="ru-ru" Text="Транспорта"/></TextBlock>
        <TextBox x:Name="Id_Transport_TextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="373" Height="37"  Foreground="Black" Margin="416,192,0,0" Background="#FFF8EDFF"/>
        <TextBlock FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="155,250,0,320" TextAlignment="Center" Foreground="Black" Width="249"><Run Language="ru-ru" Text="Дата начала поездки"/></TextBlock>
        <TextBox x:Name="StartDate_TextBox"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="371" Height="37"  Foreground="Black" Margin="416,247,0,0" Background="#FFF8EDFF"/>
        <TextBlock FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="129,300,0,267" TextAlignment="Center" Foreground="Black" Width="275"><Run Text="Время начала пое"/><Run Language="ru-ru" Text="з"/><Run Text="дки"/></TextBlock>
        <TextBox x:Name="Time_TextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="373" Height="38"  Foreground="Black" Margin="416,300,0,0" Background="#FFF8EDFF"/>
        <TextBox x:Name="Duration_TextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="373" Height="38"  Foreground="Black" Margin="416,359,0,0" Background="#FFF8EDFF"/>
        <TextBlock FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="129,359,0,208" TextAlignment="Center" Foreground="Black" Width="275"><Run Language="ru-ru" Text="Длительность"/></TextBlock>
        
        <Button Click="Calculator_Click" Background="#FFF6DCFF" Content="Считать" HorizontalAlignment="Left" FontSize="24"
            Width="232" BorderBrush="White" Foreground="Black" FontFamily="Malgun Gothic"  FontWeight="Bold"
            Margin="164,409,0,150"/>
        <TextBox x:Name="Result_TextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="373" Height="38"  Foreground="Black" Margin="415,409,0,0" Background="#FFF8EDFF"/>


        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
