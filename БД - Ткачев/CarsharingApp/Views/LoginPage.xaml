<Page x:Class="CarsharingApp.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarsharingApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="LoginPage">

    <Grid Width="1080" Height="600" Background="White">
        <TextBlock Text="Вход в аккаунт"  FontSize="50" HorizontalAlignment="Center" Margin="0,89,0,425" FontWeight="Bold" Width="378"/>

        <Button Click="Login_Click" Background="#FFF6DCFF" Content="Войти" HorizontalAlignment="Left" FontSize="24"
        Width="364" Height="50" BorderBrush="White" Foreground="Black" FontFamily="Malgun Gothic"  FontWeight="Bold"
        Margin="389,374,0,176"/>

        <TextBlock Height="30" Text="Логин" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="263,247,0,323" TextAlignment="Center" Foreground="Black" Width="122"/>
        <TextBox x:Name="Login_TextBox"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="362" Height="42"  Foreground="Black" Margin="391,243,0,0" Background="#FFF8EDFF"/>

        <TextBlock Height="30" Text="Пароль" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="275,304,0,266" TextAlignment="Center" Foreground="Black" Width="110"/>
        <TextBox x:Name="Password_TextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="364" Height="42"  Foreground="Black" Margin="389,300,0,0" Background="#FFF8EDFF"/>
        <TextBlock  FontSize="20" HorizontalAlignment="Left" Margin="351,166,0,406" FontWeight="Bold" Width="146"><Run Text="Нет аккаунта"/><Run Language="ru-ru" Text="?"/></TextBlock>
        <Button Click="Registration_Click" Background="#FFE2E2E2" Content="Регистрация" HorizontalAlignment="Left" FontSize="20"
            Width="220" BorderBrush="White" Foreground="Black" FontFamily="Malgun Gothic"  FontWeight="Bold"
            Margin="497,162,0,402"/>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
