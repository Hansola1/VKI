<Page x:Class="OurDecorApplication.Views.MaterialsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OurDecorApplication.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Список материалов">

    <Grid Height="450" Width="800" Background="White">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Panel.ZIndex="1"></Frame>

        <!--Заголовок-->
        <TextBlock HorizontalAlignment="Left" Margin="20,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" FontSize="30"
                Height="43" FontFamily="Gabriola"><Run Language="ru-ru" Text="Список материалов"/></TextBlock>

        <!--Кнопки-->
        <Button Content="Назад" HorizontalAlignment="Left" Margin="20,408,0,0" VerticalAlignment="Top" Width="131" Click="Cancel_click" 
             Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="32" Foreground="White"/>
        <Button Content="Список продуктов" HorizontalAlignment="Left" Margin="163,408,0,0" VerticalAlignment="Top" Width="181" Click="ToProducts_click" 
             Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="32" Foreground="White"/>

        <!--Таблица продуктов-->
        <StackPanel x:Name="DataGridContainer" Background="White" Margin="20,69,22,52">
            <DataGrid x:Name="MaterialsDataGrid" Background="#FFBBD9B2" Height="330" FontFamily="Gabriola" BorderBrush="#FFC1C1C1"></DataGrid>
        </StackPanel>

    </Grid>
</Page>
