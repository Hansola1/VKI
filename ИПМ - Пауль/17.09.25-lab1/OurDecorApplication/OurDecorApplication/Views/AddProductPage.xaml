<Page x:Class="OurDecorApplication.Views.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OurDecorApplication.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавить продукт">

    <Grid Height="450" Width="800" Background="White">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Panel.ZIndex="1"></Frame>

        <!--Заголовок-->
        <TextBlock HorizontalAlignment="Left" Margin="284,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="35"
        Height="58" FontFamily="Gabriola"><Run Language="ru-ru" Text="Добавить продукт"/></TextBlock>

        <!--Кнопки-->
        <Button Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="173" Click="Save_click" 
         Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="39" Foreground="White" Margin="421,385,0,0"/>
        <Button Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Width="173" Click="Cancel_click" 
         Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="38" Foreground="White" Margin="212,386,0,0"/>

        <!--Поля-->
        <TextBlock HorizontalAlignment="Left" Margin="123,88,0,0" TextWrapping="Wrap" Text="Артикул:" VerticalAlignment="Top" Width="70" FontFamily="Gabriola" FontSize="20" Height="24"/>
        <TextBox x:Name="ArticleTextBox" HorizontalAlignment="Left" Margin="258,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" Height="27" Background="#FFBBD9B2" FontFamily="Gabriola"/>

        <TextBlock HorizontalAlignment="Left" Margin="123,132,0,0" TextWrapping="Wrap" Text="Тип продукта:" VerticalAlignment="Top" Width="97" FontFamily="Gabriola" FontSize="20" Height="24"/>
        <ComboBox x:Name="TypeProductTextBox" HorizontalAlignment="Left" Margin="258,132,0,0" VerticalAlignment="Top" Width="309" BorderBrush="#FFBBD9B2" Foreground="Black" FontFamily="Gabriola">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="#FFBBD9B2" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>

        <TextBlock HorizontalAlignment="Left" Margin="123,182,0,0" TextWrapping="Wrap" Text="Наименование:" VerticalAlignment="Top" Width="103" FontFamily="Gabriola" FontSize="20" Height="24"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="258,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" Height="27" Background="#FFBBD9B2" FontFamily="Gabriola"/>

        <TextBlock HorizontalAlignment="Left" Margin="123,226,0,0" TextWrapping="Wrap" Text="Мин. стоимость:" VerticalAlignment="Top" Width="115" FontFamily="Gabriola" FontSize="20" Height="24"/>
        <TextBox x:Name="MinCostTextBox" HorizontalAlignment="Left" Margin="258,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" Height="27" Background="#FFBBD9B2" FontFamily="Gabriola"/>

        <TextBlock HorizontalAlignment="Left" Margin="123,265,0,0" TextWrapping="Wrap" Text="Мин. стоимость" VerticalAlignment="Top" Width="115" FontFamily="Gabriola" FontSize="20" Height="36" LineHeight="11"/>
        <TextBlock HorizontalAlignment="Left" Margin="123,281,0,0" TextWrapping="Wrap" Text="для партнеров:" VerticalAlignment="Top" Width="115" FontFamily="Gabriola" FontSize="20" Height="36" LineHeight="11"/>
        <TextBox x:Name="MinCostPartnerTextBox" HorizontalAlignment="Left" Margin="258,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" Height="27" Background="#FFBBD9B2" FontFamily="Gabriola"/>

        <TextBlock HorizontalAlignment="Left" Margin="123,317,0,0" TextWrapping="Wrap" Text="Ширина рулонов:" VerticalAlignment="Top" Width="115" FontFamily="Gabriola" FontSize="20" Height="36" LineHeight="11"/>
        <TextBox x:Name="WidthTextBox" HorizontalAlignment="Left" Margin="258,321,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" Height="27" Background="#FFBBD9B2" FontFamily="Gabriola"/>
    </Grid>
</Page>
