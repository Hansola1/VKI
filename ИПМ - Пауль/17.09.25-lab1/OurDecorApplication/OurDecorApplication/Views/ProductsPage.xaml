<Page x:Class="OurDecorApplication.Views.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OurDecorApplication.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Список продуктов">

    <Grid Height="450" Width="800" Background="White">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Panel.ZIndex="1"></Frame>

        <!--Заголовок-->
        <TextBlock HorizontalAlignment="Left" Margin="20,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" FontSize="30"
                   Height="43" FontFamily="Gabriola"><Run Language="ru-ru" Text="Список продуктов"/></TextBlock>

        <!--Кнопки-->
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="514,25,0,0" VerticalAlignment="Top" Width="128" Click="Add_click" 
                Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="32" Foreground="White"/>
        <Button Content="Редактировать" HorizontalAlignment="Left" Margin="647,25,0,0" VerticalAlignment="Top" Width="131" Click="Edit_click" 
                Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="32" Foreground="White"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="20,408,0,0" VerticalAlignment="Top" Width="131" Click="Cancel_click" 
                Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="32" Foreground="White"/>
        <Button Content="Список материалов" HorizontalAlignment="Left" Margin="163,408,0,0" VerticalAlignment="Top" Width="181" Click="ToMaterials_click" 
                Background="#FF2D6033" BorderBrush="#FF2D6033" FontFamily="Gabriola" FontSize="20" Height="32" Foreground="White"/>

        <!--Таблица продуктов-->
        <!--Таблица продуктов-->
        <StackPanel x:Name="DataGridContainer" Background="White" Margin="20,69,22,52">
            <ListBox x:Name="ProductsDataGrid" Background="#FFBBD9B2"  BorderBrush="#FFC1C1C1" 
             BorderThickness="1" FontFamily="Gabriola">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FFC1C1C1" BorderThickness="1" Padding="10" Margin="0,5,0,5" Background="White">
                            <StackPanel Orientation="Horizontal">
                                <!-- Левая часть -->
                                <StackPanel Width="400" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding TypeProduct}"
                                               FontSize="14" FontWeight="SemiBold"/>
                                    <!--{Binding NameProduct}"-->
                                    <TextBlock Text="{Binding Article}" FontSize="12" Foreground="#666"/>
                                    <TextBlock Text="{Binding MinCostPartner, StringFormat='Минимальная стоимость для партнера (₽): {0:F2}'}" 
                                               FontSize="12" Foreground="#666"/>
                                    <TextBlock Text="{Binding RollWidth, StringFormat='Ширина (м):'}" 
                                               FontSize="12" Foreground="#666"/>
                                </StackPanel>

                                <!-- Правая часть: Стоимость -->
                                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding MinCostPartner}" FontSize="14" FontWeight="SemiBold" Foreground="#2D6033"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

    </Grid>
</Page>
