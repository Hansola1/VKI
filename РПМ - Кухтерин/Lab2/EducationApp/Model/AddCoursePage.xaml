<Page x:Class="EducationApp.Model.AddCoursePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EducationApp.Model"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080" Title="AddCoursePage" Background="White">

    <Grid>
        <TextBlock Text="Добавить курс"  FontSize="40"
             HorizontalAlignment="Left" Margin="354,45,0,424" FontWeight="Bold" Width="340"/>

        <Button Click="add_course_Click" x:Name="add_course_button" Background="#FFF6DCFF" Style="{StaticResource topButton}"
        Content="Добавить" HorizontalAlignment="Left"
        Width="233" Height="NaN" BorderBrush="White" Foreground="Black" FontFamily="Malgun Gothic"  FontWeight="Bold" FontSize="18"
        Margin="503,442,0,100"/>

        <Button Click="cancel_Click" x:Name="cancel_button" Background="#FFF2CFFF" Style="{StaticResource topButton}"
        Content="Назад"  HorizontalAlignment="Left"
        Width="139" Height="NaN" BorderBrush="White" Foreground="Black"
        FontFamily="Malgun Gothic" FontWeight="Bold" FontSize="18" Margin="349,442,0,100"/>

        <TextBlock Text="Название курса" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="0,157,0,405" TextAlignment="Center" Foreground="Black" Width="405"/>
        <TextBox Style="{StaticResource searchTextbox}" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="350" Height="42"  Foreground="Black" Margin="386,157,0,0" Background="#FFF8EDFF"/>

        <TextBlock Text="Преподаватель" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="35,219,0,342" TextAlignment="Center" Foreground="Black" Width="339"/>
        <TextBox Style="{StaticResource searchTextbox}" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="350" Height="42"  Foreground="Black" Margin="386,219,0,0" Background="#FFF8EDFF"/>

        <TextBlock Text="Время провдения" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="50,282,0,269" TextAlignment="Center" Foreground="Black" Width="336"/>
        <TextBox Style="{StaticResource searchTextbox}" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="350" Height="42"  Foreground="Black" Margin="386,282,0,0" Background="#FFF8EDFF"/>

        <TextBlock Text="Макс кол-во студентов" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="76,347,0,203" TextAlignment="Center" Foreground="Black" Width="328"/>
        <TextBox Style="{StaticResource searchTextbox}"  HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="350" Height="41"  Foreground="Black" Margin="386,347,0,0" Background="#FFF8EDFF"/>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
